badgetable {
<tal:badgetable repeat="badge badge_manager">
    "${badge.label}",
</tal:badgetable>
}

<tal:badges repeat="badge badge_manager">
    item (FEAT_BADGES, ${badge.label.replace("/", "_")}) {
        property {
            label: "${badge.label}";
            <tal:name condition="badge.name is not None">
                name: string(${badge.name});
            </tal:name>
        }
    }
</tal:badges>
