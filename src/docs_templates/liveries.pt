<tal:main_template define="main_template load: main_template.pt" metal:use-macro="main_template">
<div metal:fill-slot='body'>
    <div class="container">
        <div class="row">
            <div class="span12">
                <h1>Liveries</h1>
                <p>[Engines only for now]</p>
                <ul>
                    <tal:liveries repeat="livery_pair roster.model_variants_grouped_by_livery.items()">
                        <li>${doc_helper.get_livery_display_name(iron_horse.livery_supplier[livery_pair[0]])}</li>
                        <ul>
                            <tal:model_variants repeat="model_variant livery_pair[1]">
                                <li tal:condition="model_variant.catalogue.engine_quacker.quack">
                                    <a href="${model_variant.catalogue.model_id}.html#appearance">${doc_helper.unpack_name_string(model_variant.catalogue)}</a>
                                    ${model_variant.catalogue.intro_year}
                                </li>
                            </tal:model_variants>
                        </ul>
                    </tal:liveries>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <br />
</div>
</tal:main_template>
